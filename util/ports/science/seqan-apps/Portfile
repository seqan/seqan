# $Id$

PortSystem          1.0

name                seqan-apps
version             1.4.1
categories          science
platforms           darwin
universal_variant   no

license             LGPL-3
maintainers         fu-berlin.de:david.weese \
                    fu-berlin.de:knut.reinert

description         Applications distributed with the SeqAn library

long_description    SeqAn applications for the analysis of large sets of sequences, e.g. \
                    read mapping, genome comparison, local alignment, data mining. \
                    If not stated otherwise, the SeqAn applications are licensed under \
                    the GNU Lesser General Public License version 3.

homepage            http://www.seqan.de/projects


master_sites        http://packages.seqan.de/${name}
use_bzip2           yes

# distname and worksrcdir should be identical in future releases
platform darwin x86_64 {
    distname            ${name}-${version}-Mac-x86_64
    worksrcdir          ${name}-${version}-Darwin-x86_64
    checksums           rmd160  57ec09ea5f496ae6bc4fddc5cafa71536f6ad789 \
                        sha256  ec01b03a82256eb22d4786f10088fec231bb3446ea38eeb6698f4099a4721944
}

platform darwin i386 {
    distname            ${name}-${version}-Mac-i686
    worksrcdir          ${name}-${version}-Darwin-i686
    checksums           rmd160  bef9796f0002253a0160b071bce216b027e1b55f \
                        sha256  187f917a55f1d0f4de553079d42c016d4659f509d33a8573544396675257f754
}


configure {}

build {}

destroot {
    foreach filename [glob ${worksrcpath}/bin/*] {
        file copy $filename ${destroot}${prefix}/bin
    }
    file copy ${worksrcpath}/share/doc ${destroot}${prefix}/share
}
